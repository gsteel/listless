{
    "name": "gsteel/listless",
    "type": "library",
    "description": "Common mailing list contracts",
    "keywords": [],
    "homepage": "https://github.com/gsteel/listless",
    "license": "MIT",
    "authors": [
        {
            "name": "George Steel",
            "email": "george@net-glue.co.uk"
        }
    ],
    "require": {
        "php": "^7.3 || ~8.0",
        "symfony/polyfill-php80": "^1.23",
        "webmozart/assert": "^1.10"
    },
    "require-dev": {
        "captainhook/captainhook": "^5.10",
        "doctrine/coding-standard": "^9.0",
        "ergebnis/composer-normalize": "^2.15",
        "infection/infection": "^0.18.2",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.16.1",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^4.8"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "composer-normalize": {
            "indent-size": 4,
            "indent-style": "space"
        }
    },
    "autoload": {
        "psr-4": {
            "GSteel\\Listless\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GSteel\\Listless\\Test\\": "test",
            "GSteel\\Listless\\Test\\Unit\\": "test/Unit",
            "GSteel\\Listless\\Test\\Integration\\": "test/Integration"
        }
    },
    "scripts": {
        "check": [
            "phpcs",
            "psalm",
            "phpunit",
            "infection"
        ],
        "clean": [
            "composer normalize",
            "psalm --update-baseline",
            "phpcbf"
        ]
    }
}
